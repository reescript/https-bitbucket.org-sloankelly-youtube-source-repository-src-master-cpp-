<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SloanKelly.Tools.SGE.Styles">

    <FontFamily x:Key="RobotoRegular">pack://application;,,,/Fonts/Roboto/#Roboto Regular</FontFamily>
    <FontFamily x:Key="RobotoCondensedBold">pack://application;,,,/Fonts/RobotoCondensed/#Roboto Condensed Bold</FontFamily>

    <Style TargetType="{x:Type Control}" x:Key="BaseFontStyle">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
    </Style>

    <Style TargetType="{x:Type TextBlock}" x:Key="BaseTextBlockFontStyle">
        <Setter Property="FontFamily" Value="{StaticResource RobotoRegular}" />
    </Style>    
    
    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource BaseFontStyle}" />
    <Style TargetType="{x:Type Label}" BasedOn="{StaticResource BaseFontStyle}" />
    <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource BaseFontStyle}" />
    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource BaseFontStyle}" />
    <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource BaseTextBlockFontStyle}" />

</ResourceDictionary>